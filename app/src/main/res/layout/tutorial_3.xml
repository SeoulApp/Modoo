<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context="com.minsung.examples.Tutorial.tutorial3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center">

        <TextView
            android:id="@+id/tutorial3_tv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/notosanskr_light_hestia"
            android:gravity="center"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="0sp"
            android:text="계속 주시하기 힘들었던 신호등"
            android:textColor="@color/color_tutorial"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/tutorial3_tv_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tutorial3_tv_top"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text="스마트폰"
                android:textColor="@color/color_tutorial"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_light_hestia"
                android:text="을 하면서도"
                android:textColor="@color/color_tutorial"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text="확인"
                android:textColor="@color/color_tutorial"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_light_hestia"
                android:text="해요"
                android:textColor="@color/color_tutorial"
                android:textSize="25sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/main_iv_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tutorial3_tv_bottom"
            android:layout_marginBottom="-60dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_no_signal" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:letterSpacing="-0.07"
            android:lineSpacingExtra="0sp"
            android:textColor="#71747b"
            android:textSize="20sp"
            android:fontFamily="@font/notosanskr_medium_hestia"
            android:text="스몸비:스마트폰을 보며 보행하는 사람" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:letterSpacing="-0.07"
            android:lineSpacingExtra="-0.3dp"
            android:textColor="#868b97"
            android:textSize="18sp"
            android:fontFamily="@font/notosanskr_light_hestia"
            android:text="스파트폰에 빠져 신호등을 보지 못해도" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#868b97"
            android:textSize="18sp"
            android:fontFamily="@font/notosanskr_light_hestia"
            android:text="진동과 알림으로 상기시켜드려요." />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tutorial_3"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tutorial3_btn_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_btn_boarders"
            android:backgroundTint="@color/color_white"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="이전" />

        <Button
            android:id="@+id/tutorial3_btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_btn_boarders"
            android:backgroundTint="@color/color_white"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="시작" />

    </LinearLayout>

</LinearLayout>
