<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minsung.examples.SplashActivity"
    android:background="@color/color_splash_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/notosanskr_bold_hestia"
        android:paddingBottom="120dp"
        android:text="@string/app_splash"
        android:textColor="@color/color_white"
        android:textSize="60sp"
        android:paddingStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/app_splash_btm"
        android:fontFamily="@font/notosanskr_regular_hestia"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:paddingStart="20dp"/>
</RelativeLayout>
